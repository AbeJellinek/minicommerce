{{#partial "content"}}
    <div class="hero image" style="background-image: url('/img/header.jpg')">
        <h1>{{siteName}}</h1>
        <div class="ui currency selection dropdown">
            <div class="default text"><i class="money icon"></i> {{i "currency"}}</div>
            <i class="dropdown icon"></i>
            <div class="menu">
                <div class="item" data-value="{{defaultCurrency.code}}">{{defaultCurrency.code}}</div>
                {{#each currencies}}
                    <div class="item" data-value="{{code}}">{{code}}</div>
                {{/each}}
            </div>
        </div>
    </div>

    <div class="ui page grid">
        {{#each products}}
            <div class="four wide column">
                <a href="/product/{{id}}">
                    <div class="ui card">
                        {{#if image}}
                            <div class="image">
                                <img src="{{image}}">
                            </div>
                        {{/if}}
                        <div class="content">
                            <div class="header">{{name}}</div>
                            <div class="meta"><span class="price">{{prettyPrice}}</span></div>
                        </div>
                    </div>
                </a>
            </div>
        {{/each}}
    </div>
{{/partial}}

{{> layout title='Home' noNavSpace=true}}